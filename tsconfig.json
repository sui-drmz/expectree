{
  "compilerOptions": {
    "outDir": "dist",
    "composite": false,
    "declaration": true,
    "declarationMap": false,
    "noEmit": false,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "target": "ES2022",
    "module": "ES2022",
    "types": ["vitest/globals"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
